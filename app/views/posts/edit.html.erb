 <div class="page-header">
  <h3>Edit post</h3>
</div>
 <%= form_tag(post_path(@post.id), {:method => :put}) do %>
  <div class="control-group">
    <%= label_tag(:title, "Title:", :class => "control-label") %>
    <%= text_field_tag(:title, @post.title , :class => "controls input-xxlarge") %>

     <div class="wmd-panel">
      <div id="wmd-button-bar"></div>
        <textarea class="wmd-input span12" name="post_text" id="wmd-input"><%= @post.text%></textarea>
      </div>


      <%= label_tag(:title, "Tags:", :class => "tag-manager control-label") %>
      <div id='tag-container' class='clearfix'></div>
      <%= text_field_tag(:tag, @post.tags.join(",") , :class => "controls",:id => "post-tags-input") %>
  </div>
   
  <%= submit_tag("update",:class =>"btn btn-primary") %>
 <% end %>


<div class="row">
  <div class="span12">
    <div class="page-header sub-heading">
      <h5>Preview</h5>
    </div>
    <div id="wmd-preview" class="wmd-panel wmd-preview"></div>   
  </div>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    new Qed.NewPost().init();
  })
</script>