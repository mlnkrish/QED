 <%= form_tag("/projects", :class => "") do %>
  <legend>New post</legend>
  <div class="control-group">
    <%= label_tag(:title, "Title:", :class => "control-label") %>
    <%= text_field_tag(:title, "" , :class => "controls input-xxlarge") %>

     <div class="wmd-panel">
      <div id="wmd-button-bar"></div>
        <textarea class="wmd-input span12" id="wmd-input"></textarea>
      </div>

      <%= label_tag(:title, "Tags:", :class => "control-label") %>
      <%= text_field_tag(:tags, "" , :class => "controls") %>
  </div>
   

  <%= submit_tag("create",:class =>"btn btn-primary") %>
 <% end %>

<div id="wmd-preview" class="wmd-panel wmd-preview"></div>   


<script type="text/javascript">
  $(document).ready(function(){
    new Qed.ProjectPost().init();
  })
</script>